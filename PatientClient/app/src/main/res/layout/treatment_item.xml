<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="121dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="1/1/2021"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/treatment_date" />
    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        android:id="@+id/upper_line"
        app:layout_constraintVertical_chainStyle="spread"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_timeline_marker"
        android:id="@+id/timeline_marker"
        app:layout_constraintTop_toBottomOf="@+id/upper_line"
        app:layout_constraintBottom_toTopOf="@+id/lower_line"
        app:layout_constraintLeft_toRightOf="@+id/treatment_date"
        app:layout_constraintRight_toLeftOf="@+id/treatment_card"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginLeft="8dp"
        android:minWidth="0dp"/>
    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        android:id="@+id/lower_line"
        app:layout_constraintTop_toBottomOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/timeline_marker"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginVertical="16dp"
        style="@style/OutlinedCard"
        app:cardCornerRadius="9dp"
        android:id="@+id/treatment_card">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/treatment_service"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:id="@+id/treatment_time"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/treatment_service"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:id="@+id/treatment_id"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/treatment_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/treatment_prescription"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/treatment_prescription"
                android:src="@drawable/ic_prescription"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_gravity="bottom|right"
                android:tooltipText="Prescription"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/treatment_id"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>