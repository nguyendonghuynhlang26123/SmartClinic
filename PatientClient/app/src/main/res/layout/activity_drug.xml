<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DrugActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/black"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/ic_back"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:background="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                android:layout_marginBottom="16dp"
                style="@style/OutlinedCard"
                android:backgroundTint="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/drug_thumbnail"
                    android:minWidth="200dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/drug_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:id="@+id/drug_price"
                android:fontFamily="@font/nunito_extrabold"
                android:textSize="30sp"
                android:textStyle="bold" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                android:visibility="invisible"
                android:id="@+id/warning">

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_black"
                    android:text="@string/product_information"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="9dp"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volume"
                            android:fontFamily="@font/nunito_bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/drug_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_italic"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/brand"
                            android:textSize="18sp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nunito_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_italic"
                            android:id="@+id/drug_brand"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from"
                            android:textSize="18sp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nunito_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_italic"
                            android:id="@+id/drug_from"
                            android:textSize="16sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/description_card">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/description"
                            android:fontFamily="@font/nunito_extrabold"
                            android:drawableLeft="@drawable/ic_description"
                            android:drawablePadding="8dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/description_content"
                            android:id="@+id/description_title"
                            android:layout_marginTop="2dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_expand"
                            android:src="@drawable/ic_expand"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_collapse"
                            android:src="@drawable/ic_expanded"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_content"
                            app:layout_constraintTop_toBottomOf="@+id/description_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_italic"
                            android:textSize="16sp"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="16dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/ingredient"
                            android:fontFamily="@font/nunito_extrabold"
                            android:drawableLeft="@drawable/ic_pills"
                            android:drawablePadding="8dp"
                            android:textSize="18sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/ingredient_content"
                            android:id="@+id/ingredient_title"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_expand"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:id="@+id/ingredient_expand"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ingredient_collapse"
                            android:src="@drawable/ic_expanded"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ingredient_content"
                            app:layout_constraintTop_toBottomOf="@+id/ingredient_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_italic"
                            android:layout_marginVertical="8dp"
                            android:textSize="16sp"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="16dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/user_manual"
                            android:fontFamily="@font/nunito_extrabold"
                            android:textSize="18sp"
                            android:drawableLeft="@drawable/ic_note"
                            android:drawablePadding="8dp"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/manual_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/manual_title"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_expand"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:id="@+id/manual_expand"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/manual_collapse"
                            android:src="@drawable/ic_expanded"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/manual_content"
                            app:layout_constraintTop_toBottomOf="@+id/manual_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_italic"
                            android:textSize="16sp"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="16dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/preservation_and_caution"
                            android:fontFamily="@font/nunito_extrabold"
                            android:textSize="18sp"
                            android:drawableLeft="@drawable/ic_insurance"
                            android:drawablePadding="8dp"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/preservation_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/preservation_title"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_expand"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:id="@+id/preservation_expand"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/preservation_collapse"
                            android:src="@drawable/ic_expanded"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/preservation_content"
                            app:layout_constraintTop_toBottomOf="@+id/preservation_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="16dp"
                            android:fontFamily="@font/nunito_italic"
                            android:textSize="16sp"
                            android:visibility="gone"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>