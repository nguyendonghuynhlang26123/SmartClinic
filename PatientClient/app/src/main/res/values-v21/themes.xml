<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PatientClient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_dark</item>
        <item name="colorSecondaryVariant">@color/pink_dark</item>
