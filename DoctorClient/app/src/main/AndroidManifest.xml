<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team13.doctorclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".MyApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoctorClient"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.NurseHomeActivity">

        </activity>
        <activity android:name=".activities.NewPrescriptionActivity" />
        <activity android:name=".activities.PrescriptionViewActivity" />
        <activity android:name=".activities.PatientDetailActivity" />
        <activity android:name=".activities.AnswerActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HomeActivity" />
    </application>

</manifest>