<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/question_card"
    app:strokeWidth="1dp"
    app:strokeColor="@color/teal_primary"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/teal_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/patient_question"
            android:paddingVertical="12dp"
            android:id="@+id/lineColor"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Why am i so beautiful?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/patient_question"
            app:layout_constraintLeft_toRightOf="@+id/lineColor"
            app:layout_constraintRight_toLeftOf="@+id/forum_detail_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:id="@+id/answer_count"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toRightOf="@+id/lineColor"
            app:layout_constraintTop_toBottomOf="@+id/patient_question"
            android:layout_marginLeft="8dp"/>
        <ImageButton
            android:id="@+id/forum_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/transparent"
            android:contentDescription="More Detail"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_chat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>