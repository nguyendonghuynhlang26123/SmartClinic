<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <TextView
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:id="@+id/timeline_date" />
    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        android:id="@+id/upper_line"
        app:layout_constraintVertical_chainStyle="spread"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_marker"
        android:src="@drawable/ic_dot"
        app:layout_constraintTop_toBottomOf="@+id/upper_line"
        app:layout_constraintBottom_toTopOf="@+id/lower_line"
        app:layout_constraintLeft_toRightOf="@+id/timeline_date"
        app:layout_constraintRight_toLeftOf="@+id/treatment_line"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:minWidth="0dp"
        android:minHeight="0dp"/>
    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        android:id="@+id/lower_line"
        app:layout_constraintTop_toBottomOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:id="@+id/treatment_line"
        app:layout_constraintLeft_toRightOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>