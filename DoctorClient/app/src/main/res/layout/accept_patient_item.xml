<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginLeft="4dp"
        style="@style/OutlinedBottomLeftNoCorner"
        android:id="@+id/appointment_accept_card">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:id="@+id/appointment_patient_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triệu chứng: "
                app:layout_constraintTop_toBottomOf="@+id/appointment_patient_name"

                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginVertical="10dp"
                android:id="@+id/symptom_label"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@+id/appointment_patient_name"
                app:layout_constraintLeft_toRightOf="@id/symptom_label"
                android:id="@+id/appointment_note"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_service"
                android:text="Treatment"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:minHeight="0dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/symptom_label"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/status_label"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="115dp"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:text="Chưa xác nhận "
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/status_label"
                app:layout_constraintTop_toBottomOf="@+id/symptom_label" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"

                app:layout_constraintLeft_toRightOf="@id/update_status"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status"
                android:layout_marginVertical="15dp"
                android:id="@+id/accept_patient"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/status"
                android:layout_marginVertical="15dp"
                app:layout_constraintRight_toLeftOf="@id/accept_patient"
                android:id="@+id/update_status"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>