<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/timeline_marker_container">

    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        android:id="@+id/upper_line"
        app:layout_constraintVertical_chainStyle="spread"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_marker"
        android:src="@drawable/ic_schedule"
        app:layout_constraintTop_toBottomOf="@+id/upper_line"
        app:layout_constraintBottom_toTopOf="@+id/lower_line"
        app:layout_constraintLeft_toRightOf="@+id/timeline_date"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginLeft="4dp"
        android:minWidth="0dp"/>
    <TextView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        android:id="@+id/lower_line"
        app:layout_constraintTop_toBottomOf="@+id/timeline_marker"
        app:layout_constraintLeft_toLeftOf="@+id/timeline_marker"
        app:layout_constraintRight_toRightOf="@+id/timeline_marker"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>