<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TimelineItemFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/teal_200"
        android:layout_marginLeft="4dp"
        style="@style/BottomLeftNoCornerCard">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MN"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:id="@+id/timeline_patient_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/timeline_time"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:30pm - 2:30pm"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/dimgray"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@+id/timeline_patient_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/timeline_time"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/timeline_time"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:minHeight="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>