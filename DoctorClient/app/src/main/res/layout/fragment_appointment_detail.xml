<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.AppointmentDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        android:id="@+id/patient_schedule_card"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ic_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ic_time"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="4dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ic_time"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/patient_time"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patient_time"
                android:layout_marginVertical="10dp"
                android:id="@+id/line1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_treatment"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ic_treatment"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintLeft_toRightOf="@+id/ic_treatment"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="4dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ic_treatment"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/patient_treatment"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patient_treatment"
                android:layout_marginVertical="10dp"
                android:id="@+id/line2"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_payment"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/ic_payment"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total estimated cost"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintLeft_toRightOf="@+id/ic_payment"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="4dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ic_payment"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/appointment_price"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>