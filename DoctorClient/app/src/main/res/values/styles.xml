<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="cornerRadius">9dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/teal_primary_variant</item>
    </style>

    <style name="BottomCornerCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutBottom</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.CutBottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="TopCornerCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutTop</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomLeftNoCornerCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.NoCutBottomLeft</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.NoCutBottomLeft" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="BottomRightNoCornerCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.NoCutBottomRight</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.NoCutBottomRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    <style name="LeftCornerButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.RoundedLeft</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedLeft" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>

    <style name="RightCornerButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.RoundedRight</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
    </style>

    <style name="CornerButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="OutlinedCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/teal_700</item>
    </style>

    <style name="OutlinedBottomLeftNoCorner" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/BottomLeftNoCornerCard</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/teal_700</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/teal_primary_variant</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

</resources>